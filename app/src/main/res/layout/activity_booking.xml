<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".booking.BookingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_venues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fill the Booking Details"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="22sp"
                    android:padding="16dp" />

                <EditText
                    android:id="@+id/first_input_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/last_input_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:textSize="18sp"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/email_input_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textSize="18sp"
                    android:padding="16dp"/>


                <EditText
                    android:id="@+id/dial_code_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="+91"
                    android:textSize="18sp"
                    android:padding="16dp"/>

                <EditText
                    android:id="@+id/dial_number_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type your Number"
                    android:textSize="18sp"
                    android:padding="16dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm"
                android:textColorHint="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp" />

            <Button
                android:id="@+id/booked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booked"
                android:textColor="@color/white"
                android:backgroundTint="@color/green_medium"
                android:visibility="gone"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp" />

            <Button
                android:id="@+id/see_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Details"
                android:textColor="@color/white"
                android:backgroundTint="@color/light_blue_600"
                android:visibility="gone"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp" />

            <LinearLayout
                android:id="@+id/order_details_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/order_details_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Booking Details"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Turf Name :"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/turf_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category Name :"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/category_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date :"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time :"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time :"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration :"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Venture Name :"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/venture_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type Name :"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status :"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="15sp"
                        android:padding="6dp"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <Button
                    android:id="@+id/cancel_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Cancel"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/red_dark"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="40dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>